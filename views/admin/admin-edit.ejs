<!doctype html>
<html lang="en">
  <head>
    <title>Title</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  </head>
  <body>
    <%- include('../header') %> 
      <div class="container">
        <div class="row ">
            <div class="col-lg-3 ">
                <h3 class="text-center my-4"><i class="fa fa-user-circle" aria-hidden="true"></i> DashBoard</h3>
                <%- include('./list-admin')%>
            </div>
            <div class="col-lg-9">
                <table class="table table-hover my-4">
                    <thead class="thead-dark">
                      <tr>
                        <th scope="col" class="text-center">Project</th>
                        <th scope="col" class="text-center">Delete</th>
                      </tr>
                    </thead>
                    <tbody>
                        <% for(var result of result){%>
                            <% for (let index = 0; index < result.class.length; index++) {%>
                              <tr>
                                <td scope="row" class="text-center" ><a href="/view/<%=result.class[index]._id %>/<%=result.topic_name %>" class="text-muted"><%=result.class[index].project_name%></a></td>
                          
                                <td class="text-center">
                                  <button data-id="<%= result.class[index]._id %>" id="<%=result.topic_name %>" data-name="<%= result.class[index].project_file %>" class="btn btn-danger delete "><i class="fa fa-trash" aria-hidden="true"></i>  Delete</button>
                                </td>
                              </tr>
                            <% } %> 
                          <%} %> 
                    </tbody>
                  </table>
            </div>
        </div>
      </div>
  </body>
</html>
<script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>
<script>
  $(document).ready(function(){
    
    $('.delete').click(function(){
      const delete_id = $(this).attr('data-id')
      const topic_name =  $(this).attr('id')
      const file_name = $(this).attr('data-name')
      $.ajax({
        url:'project-detete/'+delete_id+'/'+topic_name+'/'+file_name,
        type:'GET',
        success:function(result){
          window.location.reload()
        }
      })
    })
  })
</script>